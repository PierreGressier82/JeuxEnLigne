                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/carte1_histo_pli2"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.2"/>

                <ImageView
                    android:id="@+id/carte2_histo_pli2"
