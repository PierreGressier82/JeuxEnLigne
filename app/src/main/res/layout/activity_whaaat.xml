                <ImageView
                    android:id="@+id/devoiler_situation_4"
                    android:tag="devoiler_situation_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/main_selection"
                    android:baselineAlignBottom="true"
                    app:layout_constraintTop_toBottomOf="@+id/texte_situation_4"
                    app:layout_constraintBottom_toBottomOf="@+id/carte_situation_4"
                    app:layout_constraintEnd_toEndOf="@+id/carte_situation_4"
                    app:layout_constraintWidth_percent="0.05" />

                <ImageView
                    android:id="@+id/carte_situation_5"
                    android:tag="carte_situation_5"
                    android:layout_width="0dp"
