                    android:textColor="@color/blanc"
                    app:layout_constraintEnd_toEndOf="@+id/carte_situation_6"
                    app:layout_constraintStart_toStartOf="@id/carte_situation_6"
                    app:layout_constraintTop_toTopOf="@+id/carte_situation_6"
                    app:layout_constraintWidth_percent="0.44" />

                <TextView
                    android:id="@+id/texte_situation_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
