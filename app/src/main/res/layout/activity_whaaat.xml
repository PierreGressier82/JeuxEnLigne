                    app:layout_constraintWidth_percent="0.05" />

                <ImageView
                    android:id="@+id/carte_situation_3"
                    android:tag="carte_situation_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/fond_carte_blanc"
                    android:padding="5dp"
                    android:src="@drawable/whaaat_carte_rose"
                    app:layout_constraintEnd_toStartOf="@+id/carte_situation_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/carte_situation_1"
                    app:layout_constraintWidth_percent="0.47" />

                <ImageView
                    android:id="@+id/carte_situation_4"
                    android:tag="carte_situation_4"
