<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rouge"
    android:orientation="vertical"
    tools:context=".MajorityActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/entete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/noir_transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bouton_retour"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/retour_l_accueil"
            android:src="@drawable/bouton_quitter"
            android:tag="bouton_retour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nom_salon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/app_name"
            android:textAlignment="textEnd"
            android:textColor="@color/blanc"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/bouton_retour"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titre_jeu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Whaaat"
            android:textAlignment="center"
            android:textColor="@color/blanc"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/bouton_retour"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/pseudo"
            android:textAlignment="textEnd"
            android:textColor="@color/blanc"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/chargement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/texteChargement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Chargement"
            android:textAlignment="center"
            android:textColor="@color/blanc"
            android:textSize="50sp" />

        <ProgressBar
            android:id="@+id/barreDeChargement"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/situations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@color/bleu"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carte_situation_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintWidth_percent="0.3"
            android:src="@drawable/whaaat_carte_jaune"
            android:padding="5dp"
            android:background="@drawable/fond_carte_blanc"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/carte_situation_2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/carte_situation_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintWidth_percent="0.3"
            android:src="@drawable/whaaat_carte_jaune"
            android:padding="5dp"
            android:background="@drawable/fond_carte_blanc"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@id/carte_situation_1"
            app:layout_constraintEnd_toStartOf="@id/carte_situation_3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/carte_situation_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintWidth_percent="0.3"
            android:src="@drawable/whaaat_carte_jaune"
            android:padding="5dp"
            android:background="@drawable/fond_carte_blanc"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@id/carte_situation_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/carte_situation_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintWidth_percent="0.3"
            android:src="@drawable/whaaat_carte_jaune"
            android:padding="5dp"
            android:background="@drawable/fond_carte_blanc"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/carte_situation_5"
            app:layout_constraintTop_toBottomOf="@id/carte_situation_1" />

        <ImageView
            android:id="@+id/carte_situation_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintWidth_percent="0.3"
            android:src="@drawable/whaaat_carte_jaune"
            android:padding="5dp"
            android:background="@drawable/fond_carte_blanc"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@id/carte_situation_4"
            app:layout_constraintEnd_toStartOf="@id/carte_situation_6"
            app:layout_constraintTop_toBottomOf="@id/carte_situation_2" />

        <ImageView
            android:id="@+id/carte_situation_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintWidth_percent="0.3"
            android:src="@drawable/whaaat_carte_jaune"
            android:padding="5dp"
            android:background="@drawable/fond_carte_blanc"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@id/carte_situation_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/carte_situation_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:src="@drawable/whaaat_image_1"
                android:adjustViewBounds="true"
                android:padding="5dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:src="@drawable/whaaat_image_1"
                android:adjustViewBounds="true"
                android:padding="5dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:src="@drawable/whaaat_image_1"
                android:adjustViewBounds="true"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:src="@drawable/whaaat_image_1"
                android:adjustViewBounds="true"
                android:padding="5dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:src="@drawable/whaaat_image_1"
                android:adjustViewBounds="true"
                android:padding="5dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:src="@drawable/whaaat_image_1"
                android:adjustViewBounds="true"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:src="@drawable/whaaat_image_1"
                android:adjustViewBounds="true"
                android:padding="5dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:src="@drawable/whaaat_image_1"
                android:adjustViewBounds="true"
                android:padding="5dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:src="@drawable/whaaat_image_1"
                android:adjustViewBounds="true"
                android:padding="5dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/bouton_valider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@color/noir_transparent"
        android:tag="bouton_valider"
        android:text="@string/valider"
        android:textColor="@color/blanc" />

</LinearLayout>