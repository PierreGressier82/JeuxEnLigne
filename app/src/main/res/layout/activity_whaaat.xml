            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/choix_objet_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/tick_vert"
            android:adjustViewBounds="false"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/objet_1"
            app:layout_constraintTop_toTopOf="@id/objet_2" />

        <ImageView
            android:id="@+id/objet_3"
            android:tag="objet_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:src="@drawable/whaaat_image_1"
            android:adjustViewBounds="true"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@id/objet_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/choix_objet_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/tick_vert"
            android:adjustViewBounds="false"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/objet_2"
            app:layout_constraintTop_toTopOf="@id/objet_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

