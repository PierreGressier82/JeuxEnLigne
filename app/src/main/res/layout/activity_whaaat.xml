            android:src="@drawable/whaaat_carte_jaune"
            android:padding="5dp"
            android:background="@drawable/fond_carte_blanc"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@id/carte_situation_4"
            app:layout_constraintEnd_toStartOf="@id/carte_situation_6"
            app:layout_constraintTop_toBottomOf="@id/carte_situation_2" />

        <ImageView
            android:id="@+id/carte_situation_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintWidth_percent="0.3"
