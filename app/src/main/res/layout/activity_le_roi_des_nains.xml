<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/couleurFondRoiNains"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.pigredorou.jeuxenvisio.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/entete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bouton_retour"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/retour_l_accueil"
            android:src="@drawable/bouton_quitter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titre_jeu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Le_roi_des_nains"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/bouton_retour"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pseudo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/pseudo"
            android:textAlignment="textEnd"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nom_salon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pseudo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/scrollView_cartes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tableau_cartes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal">

                <TextView
                    android:id="@+id/resultat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/carte_1"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/fusee_1"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/carte_2"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/fusee_1"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/carte_3"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/fusee_1"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/carte_4"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/fusee_1"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/carte_5"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/fusee_1"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/carte_6"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/fusee_1"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/carte_7"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/fusee_1"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/carte_8"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/fusee_1"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/carte_9"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/fusee_1"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/carte_10"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/fusee_1"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/carte_11"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/carte"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/carte_12"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/carte"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/carte_13"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/carte"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/carte_14"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/carte"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/carte_15"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/carte"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/carte_16"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/carte"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/carte_17"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/carte"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/carte_18"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/carte"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/carte_19"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/carte"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/carte_20"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/carte"
                    android:visibility="gone" />

            </TableRow>
        </TableLayout>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scrollView_cartes"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/tableau_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <TextView
                android:id="@+id/titre_pli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pli_en_cours"
                android:textAlignment="center"
                android:textColor="@color/noir"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal">

                <TextView
                    android:id="@+id/table_pseudo_joueur1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.2"
                    android:text="@string/pseudo"
                    android:textAlignment="center"
                    android:textColor="@color/blanc"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/table_pseudo_joueur2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.2"
                    android:text="@string/pseudo"
                    android:textAlignment="center"
                    android:textColor="@color/blanc"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/table_pseudo_joueur3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.2"
                    android:text="@string/pseudo"
                    android:textAlignment="center"
                    android:textColor="@color/blanc"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/table_pseudo_joueur4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.2"
                    android:text="@string/pseudo"
                    android:textAlignment="center"
                    android:textColor="@color/blanc"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/table_pseudo_joueur5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.2"
                    android:text="@string/pseudo"
                    android:textAlignment="center"
                    android:textColor="@color/blanc"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow
                android:id="@+id/source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal">

                <ImageView
                    android:id="@+id/table_carte_image_joueur1"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.2"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/rose_2"/>

                <ImageView
                    android:id="@+id/table_carte_image_joueur2"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.2"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/rose_9"/>

                <ImageView
                    android:id="@+id/table_carte_image_joueur3"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.2"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/rose_6"/>

                <ImageView
                    android:id="@+id/table_carte_image_joueur4"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.2"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/vert_2"/>

                <ImageView
                    android:id="@+id/table_carte_image_joueur5"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.2"
                    android:contentDescription="@string/carte"
                    android:src="@drawable/rose_7"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TableRow
            android:id="@+id/cible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Joueur gauche"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:text="Règle de la partie 1\n Les règles peuvent être sur plusieurs lignes\nPGR\n"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textAlignment="textEnd"
            android:text="Joueur droite"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="Pigre"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:text="Règle de la partie 2\n Les règles peuvent être sur plusieurs lignes\nPGR"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textAlignment="center"
                android:text="Thom"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/bouton_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/refresh"
        android:textColor="@color/noir"
        android:textColorHint="@color/blanc" />

    <TextView
        android:id="@+id/heure_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2">

        <LinearLayout
            android:id="@+id/ligne1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/ligne1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/ligne2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/ligne2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </GridLayout>
</LinearLayout>